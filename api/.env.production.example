# Production environment variables
# Copy this to .env.production and fill in actual values

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/aurelius
DB_HOST=postgres
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=changeme_in_production
DB_NAME=aurelius

# JWT Authentication
SECRET_KEY=generate_a_secure_random_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Redis (for caching - optional)
REDIS_URL=redis://redis:6379/0

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=

# Cloud Provider (AWS/GCP/Azure)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Storage
S3_BUCKET_NAME=aurelius-data
STORAGE_PATH=/data

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_METRICS=true
ENABLE_TRACING=true
